<p id="notice"><%= notice %></p>
<%= form_tag "/admin/:id" do %>
  <% @scholar = Scholar.find(params[:id]) %>

    <div class="form-group">
      <%= label_tag "First Name" %>
      <span class="input-xlarge uneditable-input">
        <%= @scholar.first_name %>
      </span>
    </div>
   <div class="form-group">
      <%= label_tag "Last Name" %>
      <span class="input-xlarge uneditable-input">
        <%= @scholar.last_name %>
      </span>
    </div>
    <div class="form-group">
      <%= label_tag "Username" %>
      <span class="input-xlarge uneditable-input">
        <%= @scholar.username %>
      </span>
    </div>
    <div class="form-group">
      <%= label_tag "Email" %>
      <span class="input-xlarge uneditable-input">
        <%= @scholar.email %>
      </span>
    </div>
    <div class="form-group">
      <%= label_tag "Student" %>
      <span class="input-xlarge uneditable-input">
        <%= @scholar.student %>
      </span>
    </div>
    <div class="form-group">
      <%= label_tag "Admin" %>
      <span class="input-xlarge uneditable-input">
        <%= @scholar.is_admin %>
      </span>
    </div>
      
  <%= link_to 'Edit', edit_admin_path(@scholar) %> |
  <%= link_to 'Back', admins_path %>

<% end %>
